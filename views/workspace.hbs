<nav id="header">
	<div class="avatar">
		<div
			id="nav-plus"
			class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
		>
			<a href="/codeFile"><img
					src="https://freepikpsd.com/file/2019/10/white-plus-sign-png-3-Transparent-Images.png"
				/></a>
		</div>
	</div>
	<h2 class="card-title">Hello, {{username}}!</h2>
	<div class="avatar">
		<div id="nav-picture" class="w-24 mask mask-squircle">
			<a href="/profile"><img src="{{image}}" /></a>
		</div>
	</div>
</nav>

<div
	class="carousel carousel-center"
>
<div class="carousel-item">
		{{#each codes}}
	<section id="section-card">
		<div id="div-card" class="card w-96 bg-base-100 shadow-xl">
			<figure class="px-10 pt-10">
				<img src="{{this.image}}" class="rounded-xl" />
			</figure>
			<div class="card-body items-center text-center">
				<h2 class="card-title">{{title}}</h2>
				<p>{{languages}}</p>
				<div class="card-actions">
					<a href="/codefile/{{_id}}"><button
							class="btn btn-primary"
						>Open</button></a>
				</div>
			</div>
		</div>
	</section>
{{/each}}
</div>

{{#if errorMessage}}
	<p class="error">{{errorMessage}}</p>
{{/if}}