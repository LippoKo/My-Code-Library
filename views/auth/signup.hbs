<h1>
	SignUp
</h1>

<form action="/auth/signup" method="POST">
	<label>
		Username
		<input type="text" name="username" />
	</label>

	<label>
		Email
		<input type="text" name="email" />
	</label>

	<label>
		Password
		<input type="password" name="password" />
	</label>

	<button type="submit">Submit</button>
</form>

<a href="/auth/login">Login</a>
<a href="/">Home</a>

{{#if errorMessage}}
	{{errorMessage}}
{{/if}}