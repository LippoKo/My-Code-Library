<h1>
	SignUp
</h1>

<form action="/auth/signup" method="POST" enctype="multipart/form-data">
	<label>
		Username
		<input id="input-c" type="text" name="username" />
	</label>

	<label>
		Email
		<input id="input-c" type="text" name="email" />
	</label>

	<label>
		Password
		<input id="input-c" type="password" name="password" />
	</label>

	<label>
		Profession
		<input id="input-c" type="text" name="profession" />
	</label>
	<label>
		Interests
		<input id="input-c" type="text" name="interests" />
	</label>
	<label>
		Image
		<input id="input-c" type="file" name="image" />
	</label>

	<button type="submit">Submit</button>
</form>

<a href="/auth/login"><strong>Login</strong></a>
<a href="/"><strong>Home</strong></a>

{{#if errorMessage}}
	<p class="error">{{errorMessage}}</p>
{{/if}}